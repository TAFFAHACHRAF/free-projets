        </activity>
        <activity
            android:name="com.jovanovic.stefan.products_management.activities.commande.CommandeMainActivity"
            android:label="Commandes">
        </activity>
        <activity
            android:name="com.jovanovic.stefan.products_management.activities.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jovanovic.stefan.products_management.activities.dashbord.AdminActivity"
            android:label="Dashbord">
        </activity>
        <activity
            android:name="com.jovanovic.stefan.products_management.activities.dashbord.AffilieurActivity"
            android:label="Dashbord">
        </activity>
